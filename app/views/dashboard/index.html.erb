<h1>Dashboard</h1>

<%= pluralize(@prescriptions.count, "Prescription") %>

<h2>Patients</h2>
<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @patients.each do |patient| %>
    <tr>
      <td><%= link_to full_name(patient), patient %></td>
      <td><%= link_to "Delete", patient, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-default" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>Medications</h2>
<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @medications.each do |medication| %>
      <tr>
        <td><%= link_to medication.name, medication %></td>
        <td><%= link_to "Delete", medication, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-default" %></td>
      </tr>
  <% end %>
  </tbody>
</table>
